<Window x:Class="SolusManifestApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:SolusManifestApp.ViewModels"
        xmlns:views="clr-namespace:SolusManifestApp.Views"
        Title="Solus Manifest App"
        Icon="/icon.ico"
        Height="1060"
        Width="1500"
        MinHeight="700"
        MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50"
                      ResizeBorderThickness="5"
                      CornerRadius="12"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LuaInstallerViewModel}">
            <views:LuaInstallerPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LibraryViewModel}">
            <views:LibraryPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StoreViewModel}">
            <views:StorePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:DownloadsViewModel}">
            <views:DownloadsPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ToolsViewModel}">
            <views:ToolsPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsPage/>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{DynamicResource PrimaryDarkBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource SecondaryDarkBrush}"
            BorderThickness="1">
        <Grid>
            <!-- Main Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Title Bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <Image Source="/icon.ico"
                               Width="24"
                               Height="24"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Solus Manifest App"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,15,0"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Width="46" Height="32"
                                Background="Transparent"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderThickness="0"
                                Padding="0"
                                Click="MinimizeButton_Click"
                                Cursor="Hand"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        Width="46" Height="32"
                                                        Padding="0">
                                                    <TextBlock Text="_"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Margin="0,-5,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#40FFFFFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Width="46" Height="32"
                                Background="Transparent"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderThickness="0"
                                Padding="0"
                                Click="MaximizeButton_Click"
                                Cursor="Hand"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        Width="46" Height="32"
                                                        Padding="0">
                                                    <TextBlock Text="â–¡"
                                                               FontSize="14"
                                                               FontWeight="Normal"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#40FFFFFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Width="46" Height="32"
                                Background="Transparent"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderThickness="0"
                                Padding="0"
                                Click="CloseButton_Click"
                                Cursor="Hand"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        Width="46" Height="32"
                                                        Padding="0">
                                                    <TextBlock Text="âœ•"
                                                               FontSize="14"
                                                               FontWeight="Normal"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#40FF0000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>
                    <!-- Content -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar Navigation -->
                <Border Grid.Column="0"
                        Background="{DynamicResource SecondaryDarkBrush}"
                        CornerRadius="0,0,0,12">
                    <StackPanel Margin="10">
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToHomeCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Home}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ " FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Home" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToInstallerCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Installer}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Installer" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToLibraryCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Library}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“š" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Library" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToStoreCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Store}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ›’" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Store" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToDownloadsCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Downloads}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¬‡ï¸" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Downloads" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToToolsCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Tools}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”§" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Tools" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="{DynamicResource CardBackgroundBrush}"
                                   Margin="5,20"/>

                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToSettingsCommand}"
                                Tag="{Binding CurrentPageName, Converter={StaticResource PageNameToTagConverter}, ConverterParameter=Settings}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Settings" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Page Content -->
                <ContentControl Grid.Column="1"
                                Content="{Binding CurrentPage}"
                                Margin="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
